@import "../../common/vendor.wxss";

page {
  background: #f5f6f5;
}
.tabbar .van-tabbar--fixed {
  bottom: -2rpx !important;
}
.w100 {
  width: 100%;
}
.cont {
  padding-bottom: 120rpx;
}
.cont .van-tabbar-item {
  color: #888;
}
.cont .van-tabbar-item--active {
  color: #fff;
}
.cont .van-tabbar {
  background-color: #000;
}
.add .van-tabbar-item__icon {
  margin-bottom: 0;
  font-size: 72rpx;
  margin-top: 10rpx;
  color: #fff;
}
.banner {
  height: 320rpx;
}
.banner .banner-img {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}
.iview-card {
  margin-top: 20rpx;
}
.card {
  height: 320rpx;
  margin: 24rpx;
  background: #fff;
  border: 2rpx solid #f0f0f0;
  border-radius: 4rpx;
  position: relative;
  background-size: cover;
  background-position: center;
}
.card-mask {
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 40rpx;
  font-size: 20rpx;
  background-color: rgba(0,0,0,.35);
  color: #fff;
  position: absolute;
  left: 40rpx;
  top: 30rpx;
  border-radius: 4rpx;
}
.card-mask:before {
  content: ' ';
  display: block;
  width: 20rpx;
  border-bottom: 2rpx solid #fff;
  position: absolute;
  top: 24rpx;
  left: 14rpx;
}
.card-mask:after {
  content: ' ';
  display: block;
  width: 20rpx;
  border-bottom: 2rpx solid #fff;
  position: absolute;
  top: 24rpx;
  right: 14rpx;
}
.card-info {
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  padding: 10rpx 30rpx;
  height: 56rpx;
  overflow: hidden;
  background-color: rgba(0,0,0,.3);
}
.card-info-l {
  float: left;
  text-align: right;
}
.card-info-r {
  float: right;
  text-align: right;
}
.card-avatar {
  float: left;
  width: 56rpx;
  height: 56rpx;
  display: block;
  border-radius: 50%;
  margin-right: 8rpx;
}
.card-un {
  color: #fff;
  display: block;
  width: 220rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 22rpx;
  line-height: 56rpx;
  text-align: left;
}
.card-icon {
  vertical-align: middle;
}
.card-count {
  font-size: 20rpx;
  color: #fff;
  margin-right: 2rpx;
}
.card-count-mar {
  margin-right: 20rpx;
}
.user-info {
  background-color: #000;
  height: 120rpx;
  overflow: hidden;
  padding: 60rpx 44rpx;
  width: 100%;
  display: block;
}
.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  float: left;
}
.name {
  font-weight: 700;
  font-size: 32rpx;
  line-height: 160rpx;
  color: #fff;
  margin-left: 30rpx;
  float: left;
}
.sw .mart {
  margin-top: 30rpx;
}